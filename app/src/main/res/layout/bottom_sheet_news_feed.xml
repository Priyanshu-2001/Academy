<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/DarkModeBlack"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/inter_bold"
        android:text="New Feeds Post"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/feeds"
        app:layout_constraintEnd_toEndOf="@+id/feeds"
        app:layout_constraintStart_toStartOf="@+id/feeds"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/feeds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/text_field_1"
        android:elevation="25dp"
        android:hint="Type New Feeds Here..."
        android:padding="15dp"
        android:singleLine="false"
        android:textColor="@color/black"
        android:textColorHint="@color/scnd_grey"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/opt_send_btn"
        android:text="POST"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feeds" />


</androidx.constraintlayout.widget.ConstraintLayout>


