<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_back"
    tools:context=".drawerFragments.verifyContactDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_semi_bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Enter Your\n Mobile Number"
            android:textColor="@color/app.compat.light"
            android:textSize="25dp"
            app:layout_constraintVertical_bias=".2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="We'll Text You Verification Code"
            android:textColor="@color/app.compat.light"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text_bg"
            android:digits="0123456789"
            android:gravity="center"
            android:hint="MOBILE NUMBER"
            android:inputType="phone"
            android:letterSpacing="0.5"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:textColor="@color/app.compat.light"
            android:textColorHint="@color/scnd_grey"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />


        <Button
            android:id="@+id/sendOTP"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/opt_send_btn"
            android:text="CONTINUE"
            android:textColor="@color/app.compat.light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumber" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>