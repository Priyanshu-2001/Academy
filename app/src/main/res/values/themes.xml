<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OscarAcademy" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:homeAsUpIndicator">@drawable/white_back_button</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="CalendarWidgetdate">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CalendarWidgetHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app.compat.light</item>
    </style>

    <style name="CalendarWidgetDay">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app.compat.light</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColorPrimaryDisableOnly">@color/black</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:homeAsUpIndicator">@drawable/white_back_button</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/btn_theme_2</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.OscarAcademy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="Theme.OscarAcademy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OscarAcademy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>