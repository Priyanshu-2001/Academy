<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sports.oscaracademy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/transparent_black"
        android:supportsRtl="true"
        android:theme="@style/Theme.OscarAcademy">
        <activity
            android:name=".chatService.chat_activty"
            android:exported="true" />
        <activity
            android:name=".HomeActivities.news_feeds"
            android:exported="true" />
        <activity android:name=".drawerFragments.profileActivity" />
        <activity android:name=".HomeActivities.Students" />
        <activity android:name=".HomeActivities.admin_attendance" />
        <activity android:name=".HomeActivities.attendance" />
        <activity android:name=".EmailVerification" />
        <activity android:name=".signUpActivity" />
        <activity
            android:name=".Dashboard"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_send" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".service.MyFirstbaseService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>